<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ConfigsActivity"
    android:paddingHorizontal="30dp"
    android:paddingVertical="25dp"
    >


    <fragment
        android:id="@+id/fragConfigOpts"
        android:name="pt.isec.tp_amov.fragments.FragmentConfigOpts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </fragment>
    <fragment
        android:id="@+id/fragConfigUnit"
        android:name="pt.isec.tp_amov.fragments.FragmentChangeUnit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </fragment>
    <fragment
        android:id="@+id/fragConfigCategory"
        android:name="pt.isec.tp_amov.fragments.FragmentChangeCategory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </fragment>
    <fragment
        android:id="@+id/fragConfigLang"
        android:name="pt.isec.tp_amov.fragments.FragmentChangeLanguage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </fragment>
</FrameLayout>